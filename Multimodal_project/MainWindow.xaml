<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:k="http://schemas.microsoft.com/kinect/2013" x:Class="Multimodal_project.MainWindow"
        Title="MainWindow"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        Height="Auto"
        Width="Auto"
        WindowState="Maximized"
        WindowStyle="None"
        x:Name="MainWpfWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="53*"/>
            <ColumnDefinition Width="464*"/>
        </Grid.ColumnDefinitions>
        <Popup PlacementTarget="{Binding ElementName=browser}" Placement="Absolute" VerticalOffset="50" HorizontalOffset="50" IsOpen="true" Name="LeftPopup"  AllowsTransparency="True">
        </Popup>
        <Popup PlacementTarget="{Binding ElementName=browser}" Placement="Absolute" VerticalOffset="50" HorizontalOffset="150" IsOpen="true" Name="RightPopup" AllowsTransparency="True">
        </Popup>
        <WebBrowser Width="Auto" Height="Auto" Grid.ColumnSpan="2" x:Name="browser"/>
    </Grid>
</Window>
